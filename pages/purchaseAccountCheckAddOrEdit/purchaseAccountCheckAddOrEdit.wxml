<van-notify id="van-notify" />
<view class="page">
  <van-row>
    <van-cell-group>
      <van-cell
      is-link
      title="选择供应商"
      link-type="navigateTo"
      url="{{supplierUrl}}"
      value ="{{customer.companyName}}{{customer.name}}"
      input-align="right"
      required
      />
    </van-cell-group>
  </van-row>
  <van-row class="margin-top">
    <van-cell-group>
      <van-field
      label="订单号"
      value="{{ code }}"
      placeholder="默认自动生成"
      input-align="right"
      disabled
      />
    </van-cell-group>
  </van-row>
  <van-row>
    <van-field
    label="账单类型"
    value="{{ typeName }}"
    input-align="right"
    />
  </van-row>
  <van-row>
    <van-cell-group>
      <van-cell title="状态" value="{{statusName}}" />
    </van-cell-group>
  </van-row>
  <van-row>
    <view class="cu-form-group">
      <view class="title">对账日期</view>
      <picker mode="date" value="{{date}}" start="2019-09-01" end="2125-09-01" bindchange="DateChange">
        <view class="picker">
          {{date}}
        </view>
      </picker>
    </view>
  </van-row>
  <van-row>
    <van-cell-group>
      <van-field
      value="{{ totalPrice }}"
      type="number"
      required
      label="最终金额"
      placeholder="请输入金额"
      input-align="right"
      bind:input ="inputTotalPrice"
      />
    </van-cell-group>
  </van-row>
  <van-row>
    <van-cell-group>
      <van-field
      label="备注"
      value="{{ memo }}"
      input-align="right"
      />
    </van-cell-group>
  </van-row>
  <van-cell-group>
    <van-cell
    is-link
    title="添加采购单据"
    bind:click="onSelectApply"
    required
  />
  </van-cell-group>
  <scroll-view  scroll-y='true' > 
    <view  wx:for="{{productList}}"  class="bg-blue padding radius light">
      <van-swipe-cell right-width="{{ 65 }}"   data-id="{{item.id}}">
        <van-cell-group>
          
        </van-cell-group>
        <view slot="right" class="van-swipe-cell__right" data-id="{{item.id}}" bindtap="onCloseProduct">删除</view>
      </van-swipe-cell>
    </view>
  </scroll-view>
  <i-divider ></i-divider>
  <i-divider ></i-divider>
  <van-submit-bar
  button-text="{{submitText}}"
  bind:submit="onSubmit"
  />
  <view class='cu-load load-modal' wx:if="{{loadModal}}">
    <image src='/images/logo.png' class='png' mode='aspectFit'></image>
    <view class='gray-text'>加载中...</view>
  </view>
</view>